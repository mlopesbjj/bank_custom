<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_report_inherit" inherit_id="sale.report_saleorder_document">

        <xpath expr="//div[@class='row mt-4 mb-4']" position="replace">
            <div class="row mt32 mb32" id="test_inherit">
                <div class="col-auto col-3 mw-100 mb-2">
                    <t t-if="doc.payment_term_id.name.lower() and 'riba' in doc.payment_term_id.name.lower()">
                        <t t-foreach="doc.partner_id.bank_ids" t-as="account">
                            <div style="width: 500px;">
                                <strong>Banca:</strong> <t t-esc="account.x_acc_number.bank_id.name"/> <strong>IBAN:</strong> <t t-esc="account.acc_number"/>
                            </div>
                            <div>
                                <strong>ABI</strong> <t t-esc="account.acc_number and account.acc_number.replace(' ','')[5:9]"/> <strong>CAB</strong> <t t-esc="account.acc_number and account.acc_number.replace(' ','')[9:13]"/>
                            </div>
                        </t>
                    </t>
                    <t t-else="">
                        <div style="width: 500px;">
                            <strong>Banca:</strong> <t t-esc="doc.company_id.x_acc_number[0].bank_id.name or 'IBAN non esiste'"/> <strong>IBAN:</strong> <t t-esc="doc.company_id.x_acc_number[0].acc_number"/>
                        </div>
                        <div>
                            <strong>ABI</strong> <t t-esc="doc.company_id.x_acc_number[0].acc_number.replace(' ','')[5:9]"/> <strong>CAB</strong> <t t-esc="doc.company_id.x_acc_number[0].acc_number.replace(' ','')[9:13]"/>
                        </div>
                    </t>
                </div>
            </div>
        </xpath>

        <!-- <xpath expr="//h2[@class='mt-4']" position="replace">
        </xpath> -->

    </template>
</odoo>
