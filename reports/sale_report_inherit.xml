<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_report_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='row mt-4 mb-4']" position="after">
            <div class="row mt32 mb32" id="test_inherit">
                <div class="col-auto col-3 mw-100 mb-2">
                    <div>
                        <p>Pagamento: <t t-esc="doc.payment_term_id.name"/></p>
                    </div>
                    <t t-if="doc.payment_term_id.name.lower() and 'bon' in doc.payment_term_id.name.lower()">
                        <div>
                            <p>Banca: <t t-esc="doc.company_id.x_acc_number[0].bank_id.name or 'IBAN non esiste'"/></p>
                            <t t-esc="doc.company_id.x_acc_number[0].acc_number"/>
                        </div>
                        <div>
                            <t t-esc="doc.company_id.x_acc_number[0].acc_number[5:9]"/>
                            <t t-esc="doc.company_id.x_acc_number[0].acc_number[9:13]"/>
                        </div>
                    </t>
                    <t t-else="">
                        <t t-if="doc.payment_term_id.name.lower() and 'riba' in doc.payment_term_id.name.lower()">
                            <t t-foreach="doc.partner_id.bank_ids" t-as="account">
                                <div style="width: 500px;">
                                    <p>Banca: <t t-esc="account.x_acc_number.bank_id.name"/></p>
                                    <t t-esc="account.acc_number"/>
                                </div>
                                <div>
                                    <t t-esc="account.acc_number and account.acc_number[5:9]"/>
                                    <t t-esc="account.acc_number and account.acc_number[9:13]"/>
                                </div>
                            </t>
                        </t>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
